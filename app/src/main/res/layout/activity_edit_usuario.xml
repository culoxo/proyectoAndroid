<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/linearLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#817CE6F4"
tools:context=".activities.Usuario.EditUsuarioActivity">

    <TextView
        android:id="@+id/activos"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Activo"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respuestaSeg" />

    <TextView
        android:id="@+id/usuario"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Usuario"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Email"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellido2" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Nombre"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario" />

    <TextView
        android:id="@+id/apellido1"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Apellido 1"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <TextView
        android:id="@+id/apellido2"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Apellido2"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellido1" />

    <TextView
        android:id="@+id/preguntaSeg"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Pregunta de seguridad"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/respuestaSeg"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Respuesta de seguridad"
        android:textStyle="italic"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preguntaSeg" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:hint="Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/usuario"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:hint="Nombre cliente"

        app:layout_constraintStart_toStartOf="@+id/usernameText"
        app:layout_constraintTop_toBottomOf="@+id/usernameText"></EditText>



<EditText
    android:id="@+id/surnameText"
    android:layout_width="297dp"
    android:layout_height="43dp"
    android:hint="Apellido 1 "
    app:layout_constraintStart_toStartOf="@+id/nameText"
    app:layout_constraintTop_toBottomOf="@+id/nameText"></EditText>

<EditText
    android:id="@+id/surname2Text"
    android:layout_width="297dp"
    android:layout_height="43dp"
    android:hint="Apellido 2"
    app:layout_constraintStart_toStartOf="@+id/surnameText"
    app:layout_constraintTop_toBottomOf="@+id/surnameText"></EditText>
<EditText
    android:id="@+id/emailText"
    android:layout_width="297dp"
    android:layout_height="43dp"
    android:hint="Email usuario"
    app:layout_constraintStart_toStartOf="@+id/surname2Text"
    app:layout_constraintTop_toBottomOf="@+id/surname2Text"></EditText>
<EditText
    android:id="@+id/preguntaSegText"
    android:layout_width="297dp"
    android:layout_height="43dp"
    android:hint="Pregunta de seguridad"
    app:layout_constraintStart_toStartOf="@+id/emailText"
    app:layout_constraintTop_toBottomOf="@+id/emailText"></EditText>
<EditText
    android:id="@+id/respuestaSegText"
    android:layout_width="297dp"
    android:layout_height="43dp"
    android:hint="Respuesta de seguridad"
    app:layout_constraintStart_toStartOf="@+id/preguntaSegText"
    app:layout_constraintTop_toBottomOf="@+id/preguntaSegText"></EditText>

    <CheckBox
        android:id="@+id/activoBox"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/activos"
        app:layout_constraintTop_toBottomOf="@+id/respuestaSegText" />

    <Button
    android:id="@+id/editButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="88dp"
    android:drawableLeft="@drawable/baseline_edit_24_white"
    android:text="Editar"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.458"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/activoBox"></Button>

<Button
    android:id="@+id/boton_Volver"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="88dp"
    android:drawableLeft="@drawable/baseline_arrow_back_24_white"
    android:text="Volver"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.462"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editButton" />
</androidx.constraintlayout.widget.ConstraintLayout>