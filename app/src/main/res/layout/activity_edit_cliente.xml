<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817CE6F4"
    tools:context=".activities.Cliente.EditClienteActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="43dp"

        android:text="Estado"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:text="Teléfono"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:text="Email"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="43dp"

        android:text="Dirección"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:hint="Nombre cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/direccionText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:hint="Dirección"
        app:layout_constraintStart_toStartOf="@+id/nameText"
        app:layout_constraintTop_toBottomOf="@+id/nameText"></EditText>

    <EditText
        android:id="@+id/emailText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:hint="Email Cliente"
        app:layout_constraintStart_toStartOf="@+id/direccionText"
        app:layout_constraintTop_toBottomOf="@+id/direccionText"></EditText>

    <EditText
        android:id="@+id/telefono"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:hint="Teléfono cliente"
        app:layout_constraintStart_toStartOf="@+id/emailText"
        app:layout_constraintTop_toBottomOf="@+id/emailText"></EditText>

    <CheckBox
        android:id="@+id/activoBox"
        android:layout_width="297dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="@+id/telefono"
        app:layout_constraintTop_toBottomOf="@+id/telefono" />

    <TextView
        android:id="@+id/serviciosText"
        android:layout_width="296dp"
        android:layout_height="78dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/activoBox"
        app:layout_constraintTop_toBottomOf="@+id/activoBox" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:text="Servicios"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <Spinner
        android:id="@+id/serviciosSpinner"
        android:layout_width="386dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviciosText" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:drawableLeft="@drawable/baseline_edit_24_white"
        android:text="Editar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviciosSpinner"></Button>

    <Button
        android:id="@+id/boton_Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24_white"
        android:text="Volver"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="43dp"

        android:text="Nombre"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="343dp"
        android:layout_height="32dp"
        android:text="Quieres añadir un servicio?"

        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/serviciosSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.864" />
</androidx.constraintlayout.widget.ConstraintLayout>