<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Servicio.CreateServicioActivity"
    android:background="#817CE6F4"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre servicio">
    </EditText>

    <CheckBox
        android:id="@+id/activoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activo" />
    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Create"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:drawableLeft="@drawable/baseline_add_24_white">
    </Button>
    <Button
        android:id="@+id/boton_Volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Volver"
        android:textColor="@color/white"
        android:background="@color/green"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:drawableLeft="@drawable/baseline_arrow_back_24_white">
    </Button>
</LinearLayout>