<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817CE6F4"
    tools:context=".activities.Cliente.EditClienteActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:text="Estado"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Teléfono"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Dirección"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Nombre cliente"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/direccionText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Dirección"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/nameText"
        app:layout_constraintTop_toBottomOf="@+id/nameText"></TextView>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Email Cliente"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/direccionText"
        app:layout_constraintTop_toBottomOf="@+id/direccionText"></TextView>

    <TextView
        android:id="@+id/telefono"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Teléfono cliente"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/emailText"
        app:layout_constraintTop_toBottomOf="@+id/emailText"></TextView>

    <TextView
        android:id="@+id/activo"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/telefono"
        app:layout_constraintTop_toBottomOf="@+id/telefono"></TextView>

    <TextView
        android:id="@+id/serviciosText"
        android:layout_width="287dp"
        android:layout_height="81dp"
        android:textSize="50px"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/activo"
        app:layout_constraintTop_toBottomOf="@+id/activo" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Servicios"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/baseline_edit_24_white"
        android:text="Editar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviciosText"></Button>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:drawableLeft="@drawable/baseline_delete_24"
        android:text="Borrar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editButton"></Button>

    <Button
        android:id="@+id/boton_Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24_white"
        android:text="Volver"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Nombre"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>